# ============================================
# Render Environment Variables
# ============================================
# Copy this file or set these in Render Dashboard

# Application
ENVIRONMENT=production
DEBUG=false

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET={"kty":"EC","crv":"P-256",...}

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key

# Security
JWT_ALGORITHM=ES256

# CORS (optional - defaults work for same-origin)
CORS_ORIGINS=https://your-app.onrender.com
